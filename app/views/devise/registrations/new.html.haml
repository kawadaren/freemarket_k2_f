= render 'users/header_simple'
.new_page
  .main
    .main_zone
      %h2.new_registration 新規会員登録
      .account_cooperation
        .registration_form
          = link_to info_users_sign_up_index_path do
            %button.login_email.sns_login
              = fa_icon 'envelope', class: "contents__btn--icon"
              %text.text メールアドレスで登録する

          = link_to "https://www.facebook.com/" do
            %button.login_facebook.sns_login
              = fa_icon 'facebook-square', class: "contents__btn--icon"
              %text.text Facebookで登録する

          = link_to "https://www.google.co.jp/" do
            %button.login_google.sns_login
              = image_tag 'google_icon.png', alt: '', height: '30px', width: '30px', class: 'google_icon'
              %text.text Googleで登録する

= render 'users/footer_simple'
