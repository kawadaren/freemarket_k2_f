.header-simple
  %h1
    = image_tag 'logo.svg', alt: '', height: '49px', width: '185px', class: ''
  %nav.progress-ber.sign-up
    %ol.clearfix
      %li
        会員情報
        .progress-status.progress1
      %li
        電話番号認証
        .progress-status.progress2
      %li
        お届け先住所入力
        .progress-status.progress3
      %li
        支払い情報
        .progress-status.progress4
      %li.active
        完了
        .progress-status.progress5


.input_comp   
  .main
    .main_zone
      .input_form
        %h2.input_registration 支払い方法
        .input_inner
          .input_content
            .form-group
              %p 
                ありがとうございます。
                %br
                  会員登録が完了しました。
            .form-group
              %button.btn_red
                メルカリをはじめる
        .bottom
          .bottom-left
            .bottom-text
              .bottom-text__upper
                スマホでかんたんフリマアプリ
              .bottom-text__lower
                今すぐ無料ダウンロード
            .bottom-icon
              .bottom-icon__merucari
                = image_tag 'merucari-cube.png', alt: 'メルカリアイコン'
              .bottom-icon__appstore
                = image_tag 'app-store.svg', alt: 'appstoreアイコン'
              .bottom-icon__googleplay
                = image_tag 'googleplay.svg', alt: 'googleplayアイコン'
          .bottom-right
            .bottom-right__freetag
              = image_tag 'freetag.png', alt: 'freetagアイコン'



= render 'footer_simple'