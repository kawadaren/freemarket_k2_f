.header-simple
  %h1
    = image_tag 'logo.svg', alt: '', height: '49px', width: '185px', class: ''
  %nav.progress-ber3.sign-up
    %ol.clearfix
      %li
        会員情報
        .progress-status.progress1
      %li
        電話番号認証
        .progress-status.progress2
      %li.active
        お届け先住所入力
        .progress-status.progress3
      %li
        支払い情報
        .progress-status.progress4
      %li
        完了
        .progress-status.progress5

.input_address
  .main
    .main_zone
      .input_form
        %h2.input_registration 発送元・お届け先住所入力
        .input_inner
          .input_content
            .form_group
              .input_form_default
                %h3 お名前
                %span 必須
              %input.add_info{placeholder: "例) 山田"}
              %input.add_info{placeholder: "例) 彩"}
            .form_group
              .input_form_default
                %h3 お名前カナ
                %span 必須
              %input.add_info{placeholder: "例) ヤマダ"}
              %input.add_info{placeholder: "例) アヤ"}
            .form_group
              .input_form_default
                %h3 郵便番号
                %span 必須
              %input.add_info{placeholder: "例) 123-4567"}
            .form_group
              .input_form_default
                %h3 都道府県
                %span 必須
            .form_group
              .input_form_default
                %h3 市区町村
                %span 必須
              %input.add_info{placeholder: "例) 横浜市緑区"}
            .form_group
              .input_form_default
                %h3 番地
                %span 必須
              %input.add_info{placeholder: "例) 青山1-1-1"}
            .form_group
              .input_form_default
                %h3 建物名
                %span.optional 任意
              %input.add_info{placeholder: "例) 柳ビル103"}
            .form_group
              .input_form_default
                %h3 電話
                %span.optional 任意
              %input.add_info{placeholder: "例) 09012345678"}
            .form_group
              %button.btn_red
                次へ進む



= render 'footer_simple'
