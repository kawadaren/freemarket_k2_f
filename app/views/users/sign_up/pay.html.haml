.header-simple
  %h1
    = image_tag 'logo.svg', alt: '', height: '49px', width: '185px', class: ''
  %nav.progress-ber4.sign-up
    %ol.clearfix
      %li
        会員情報
        .progress-status.progress1
      %li
        電話番号認証
        .progress-status.progress2
      %li
        お届け先住所入力
        .progress-status.progress3
      %li.active
        支払い情報
        .progress-status.progress4
      %li
        完了
        .progress-status.progress5

.input_address

  = form_tag( save_users_sign_up_index_path, method: :post, id: "card-form", name: "inputForm") do
    .main
      .main_zone
        .input_form
          %h2.input_registration 支払い方法
          .input_inner
            .input_content
              .form-group
                %label.form-group__title カード番号
                %span.form-require 必須
                %input.form-text{id: 'card-number', placeholder: '半角数字のみ'}
                %ul.card-list
                  %li
                    = image_tag 'credit-card/visa.svg', width: "49", height: "20"
                  %li
                    = image_tag 'credit-card/master-card.svg', width: "34", height: "20"
                  %li
                    = image_tag 'credit-card/saison-card.svg', width: "30", height: "20"
                  %li
                    = image_tag 'credit-card/jcb.svg', width: "32", height: "20"
                  %li
                    = image_tag 'credit-card/american_express.svg', width: "21", height: "20"
                  %li
                    = image_tag 'credit-card/dinersclub.svg', width: "32", height: "20"
                  %li
                    = image_tag 'credit-card/discover.svg', width: "32", height: "20"

              .form-group
                %label.form-group__title 有効期限
                %span.form-require 必須
                %br
                .select-date
                  %select.date-list{id: "card-month"}
                    %option{value: "1"} 01
                    %option{value: "2"} 02
                    %option{value: "3"} 03
                    %option{value: "4"} 04
                    %option{value: "5"} 05
                    %option{value: "6"} 06
                    %option{value: "7"} 07
                    %option{value: "8"} 08
                    %option{value: "9"} 09
                    %option{value: "10"} 10
                    %option{value: "11"} 11
                    %option{value: "12"} 12
                  = fa_icon 'angle-down', class: "icon-arrow-down"
                  %span
                    月
                .select-date
                  %select.date-list{id: "card-year"}
                    %option{value: "2019"} 19
                    %option{value: "2020"} 20
                    %option{value: "2021"} 21
                    %option{value: "2022"} 22
                    %option{value: "2023"} 23
                    %option{value: "2024"} 24
                    %option{value: "2025"} 25
                    %option{value: "2026"} 26
                    %option{value: "2027"} 27
                    %option{value: "2028"} 28
                    %option{value: "2029"} 29
                  = fa_icon 'angle-down', class: "icon-arrow-down"
                  %span
                    年
              .form-group
                %label.form-group__title
                  セキュリティコード
                %span.form-require
                  必須
                %input.form-text{id: "card-cvc", placeholder: 'カード背面4桁もしくは3桁の番号'}
                .about-seqcode
                  .about-seqcode__text
                    %span.question
                      ?
                    カード裏面の番号とは？
                = submit_tag "追加する", class: "form_submit", id: "form-submit"

= render 'users/footer_simple'
