.header-simple
  %h1
    = image_tag 'logo.svg', alt: '', height: '49px', width: '185px', class: ''
  %nav.progress-ber1.sign-up
    %ol.clearfix
      %li.active
        会員情報
        .progress-status.progress1
      %li
        電話番号認証
        .progress-status.progress2
      %li
        お届け先住所入力
        .progress-status.progress3
      %li
        支払い情報
        .progress-status.progress4
      %li
        完了
        .progress-status.progress5

.input_info
  = form_for @user, url: tel_users_sign_up_index_path, method: :get do |f|
    .main
      .main_zone
        .input_form
          %h2.input_registration 会員情報入力
          .input_inner
            .input_content
              .form_group
                .input_form_default
                  %h3
                    = f.label :nickname, "ニックネーム"
                  %span 必須
                = f.text_field :nickname, class: "add_info", placeholder: "例)メルカリ太郎"

              .form_group
                .input_form_default
                  %h3
                    = f.label :email, "メールアドレス"
                  %span 必須
                = f.text_field :email, class: "add_info", placeholder: "PC・携帯どちらでも可"
              .form_group
                .input_form_default
                  %h3
                    = f.label :password, "パスワード"
                  %span 必須
                = f.password_field :password, class: "add_info", placeholder: "7文字以上"
              .form_group
                .input_form_default
                  %h3
                    = f.label :password_confirmation, "パスワード（確認）"
                  %span 必須
                = f.password_field :password_confirmation, class: "add_info", placeholder: "7文字以上"
              .form_group
                %h3.check_user 本人確認
                %p.attention_msg 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
              .form_group
                .input_form_default
                  %h3 お名前 (全角)
                  %span 必須
                = f.text_field :family, class: "info_half first_of_half", placeholder: "例)山田"
                = f.text_field :name, class: "info_half", placeholder: "例)彩"
              .form_group
                .input_form_default
                  %h3 お名前カナ (全角)
                  %span 必須
                = f.text_field :family_kana, class: "info_half first_of_half", placeholder: "例)ヤマダ"
                = f.text_field :name_kana, class: "info_half", placeholder: "例)アヤ"
              .form_group
                .input_form_default
                  %h3
                    = f.label :birthday, "生年月日"
                  %span 必須
                .birthday_select_wrap
                  = raw sprintf(f.date_select(:birthday, use_month_numbers: true, start_year:Time.now.year , end_year: 1900, prompt:"--", date_separator: '%s'), '<span>年</span>', '<span>月</span>') + '<span>日</span>'


              %p.form-into-text
                ※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。
            .i_single_content
              .form_group
                %p.i_single_text
                  「次へ進む」のボタンを押すことにより、
                  = link_to '利用規約', root_path
                  に同意したものとみなします
                = f.submit '次へ進む', class: 'btn_red'
                .text_right
                  = link_to '本人情報の登録について>'

= render 'users/footer_simple'

