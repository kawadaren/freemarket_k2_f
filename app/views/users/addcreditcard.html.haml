        %span.pass-page__title
          支払い方法
      = fa_icon 'angle-right', class: "icon-arrow-right"
    %li.pass-page
      %span.pass-page__title
        クレジットカード情報入力

.middle.clearfix
  .main
    = render partial: "side_bar"
