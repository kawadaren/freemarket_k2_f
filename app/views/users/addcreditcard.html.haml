              %li
                = image_tag 'credit-card/master-card.svg', width: "34", height: "20"
              %li
                = image_tag 'credit-card/saison-card.svg', width: "30", height: "20"
              %li
                = image_tag 'credit-card/jcb.svg', width: "32", height: "20"
              %li
                = image_tag 'credit-card/american_express.svg', width: "21", height: "20"
